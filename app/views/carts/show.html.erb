<div class="row">
  <div class="col">
    <h1>Your Cart</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
          <th scope="col">Item</th>
          <th scope="col">Unit Price</th>
          <th scope="col">Quanity</th>
          <th scope="col">Item Total</th>
        </tr>
        </thead>
        <tbody>
          <% current_cart.line_items.each do |line_item| %>
            <tr>
              <td><%= link_to line_item.item.title, item_path(line_item.item) %></td>
              <td><%= display_price(line_item.item.price) %></td>
              <td>Quantity: <%= line_item.quantity %></td>
              <td><%= display_price(line_item.quantity * line_item.item.price) %></td>
            </tr>
          <% end %>
          <tr>
            <td colspan="2"></td>
            <td>TOTAL</td>
            <td><strong><%= number_to_currency(current_cart.total/100) %></strong></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <p class="text-right"><%= button_to 'Checkout', checkout_path, class: "btn btn-primary" if current_cart.status != "submitted" %></p>
  </div>
</div>

<div class="row">
  <div class="col">
    <h1>Category List</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card-columns">
      <% @categories.each do |category| %>
        <div class="card bg-light mb-3 text-center">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.title, category_path(category) %></h5>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <h1><%= @category.title %></h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card-columns">
      <% @category.items.each do |item| %>
        <div class="card bg-light mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text">
              <%= display_price(item.price) %>
              <%= button_to 'Add to Cart', line_items_path(item_id: item.id), class: "btn btn-primary" if user_signed_in? %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>




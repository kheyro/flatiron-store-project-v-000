<div class="row">
  <div class="col">
    <h1>Your orders</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <% if @orders.nil? %>
      <p>No Orders</p>
    <% else %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead class="thead-dark">
          <tr>
            <th scope="col">Order #</th>
            <th scope="col">Date</th>
            <th scope="col">Total</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
          </tr>
          </thead>
          <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td scope="row"><%= order.id %></td>
              <td><%= order.created_at %></td>
              <td><%= display_price(order.cart.total) %></td>
              <td><%= order.status %></td>
              <td><%= link_to "View", user_order_path(current_user, order) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
